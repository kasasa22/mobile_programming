<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ThingFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/yellow"
        android:id="@+id/things_toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Smart Home"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="80dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:clickable="true"
                android:contentDescription="another btn"
                android:src="@drawable/baseline_saved_search_24">

            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:clickable="true"
                android:contentDescription="create btn"
                android:src="@drawable/baseline_sort_24">

            </ImageView>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/things_toolbar">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="99dp"
                android:layout_height="106dp"
                android:src="@drawable/things_icon2"
                android:layout_marginStart="150dp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No things!"
                android:textSize="29sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="140dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It looks like we didn't discover any devices."
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Try an option below"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/first_layout"
                android:layout_marginTop="30dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="@color/blue"
                    android:src="@drawable/baseline_saved_search_24"
                    app:tint="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Run discovery"
                    android:layout_marginStart="30dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/second_layout"
                android:layout_marginTop="20dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="@color/blue"
                    android:src="@drawable/baseline_add_24"
                    app:tint="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add a cloud account"
                    android:layout_marginStart="30dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/third_layout"
                android:layout_marginTop="20dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="@color/blue"
                    android:src="@drawable/baseline_drag_indicator_24"
                    android:rotation="90"
                    app:tint="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View our supported devices"
                    android:layout_marginStart="30dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/fourth_layout"
                android:layout_marginTop="20dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="@color/blue"
                    android:src="@drawable/baseline_email_24"
                    app:tint="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Support"
                    android:layout_marginStart="30dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    />


            </LinearLayout>

        </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>