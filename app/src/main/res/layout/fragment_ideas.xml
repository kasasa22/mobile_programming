<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F4F4"
    tools:context=".IdeasFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/yellow"
        android:id="@+id/ideas_toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="My Smart Home"
                android:textColor="@color/white"
                android:textSize="20sp"
               />



        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/ideas_toolbar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More Recommendations"
                android:textSize="30sp"
                android:gravity="start"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                >

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Even more recommendations!"
                android:textSize="20sp"
                android:gravity="start"
                android:paddingStart="10dp"
                android:layout_marginTop="5dp"
                >

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:contentDescription="ideas image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/petal5">

                </ImageView>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="10dp">
                   <TextView
                       android:id="@+id/first_image_textview"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Thanksgiving Dinner Ready"
                       android:textColor="@color/white"
                       android:textSize="35sp">

                   </TextView>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Send me a notification"
                       android:textColor="@color/white"
                       android:textSize="20sp">

                   </TextView>
               </LinearLayout>
            </RelativeLayout>



        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>